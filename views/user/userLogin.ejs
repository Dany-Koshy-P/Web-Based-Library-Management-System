      <section id="userLoginForm">
        <div class="container mt-5">
          <div class="row">
            <div class="col-md-6 offset-md-3">
              <div class="card">
                <div class="card-header text-center">
                  <h4>User Login</h4>
                </div>
                <div class="card-block" style="background-color: rgb(99, 102, 98);">
                  <form class="p-3" action="/auth/user-login" method="POST">
                    <div class="form-group">
                      <label class="form-control-label">Username</label>
                      <input type="text" id="username" name="username" placeholder="Username" class="form-control"
                        required style="border-radius: 20px;">
                    </div>
                    <div class="form-group">
                      <label class="form-control-label">Password</label>
                      <input type="password" id="password" name="password" placeholder="Password" class="form-control"
                        required style="border-radius: 20px;">
                    </div>
                    <button type="submit" id="submit_btn" class="btn btn-success btn-block"
                      style="border-radius: 20px;">Login!</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

